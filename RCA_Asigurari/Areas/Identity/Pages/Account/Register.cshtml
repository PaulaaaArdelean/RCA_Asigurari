@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Inregistrare!</h1>

<div >
    <div class="overflow-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h2>Creati un cont nou</h2>
           
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr">
                <div style=" border: 3px solid #C47777; padding: 8px; margin:3px">

                    <h4>Completati doar pentru <b> persoana fizica</b>! </h4>

                    <div class="form-floating">
                        <input asp-for="Input.CNP" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.CNP"></label>
                        <span asp-validation-for="Input.CNP" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.NumeProprietar" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.NumeProprietar"></label>
                        <span asp-validation-for="Input.NumeProprietar" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PrenumeProprietar" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.PrenumeProprietar"></label>
                        <span asp-validation-for="Input.PrenumeProprietar" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.SerieCI" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.SerieCI"></label>
                        <span asp-validation-for="Input.SerieCI" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.NumarCI" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.NumarCI"></label>
                        <span asp-validation-for="Input.NumarCI" class="text-danger"></span>
                    </div>
                </div>


                <div style=" border: 3px solid #C47777; padding: 8px; margin:3px">

                    <h4>Completati doar pentru <b>persoana juridica</b> !</h4>
                    <div class="form-floating">
                        <input asp-for="Input.CUI" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.CUI"></label>
                        <span asp-validation-for="Input.CUI" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.TipSocietate" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.TipSocietate"></label>
                        <span asp-validation-for="Input.TipSocietate" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ActivitateSocietate" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.ActivitateSocietate"></label>
                        <span asp-validation-for="Input.ActivitateSocietate" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.NumeFirma" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.NumeFirma"></label>
                        <span asp-validation-for="Input.NumeFirma" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.NumeReprezentantFirma" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.NumeReprezentantFirma"></label>
                        <span asp-validation-for="Input.NumeReprezentantFirma" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PrenumeReprezentantFirma" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.PrenumeReprezentantFirma"></label>
                        <span asp-validation-for="Input.PrenumeReprezentantFirma" class="text-danger"></span>
                    </div>

                </div>


                <div style="border: 3px solid #C47777; padding: 8px; margin:3px">
                    <h4>Adresa! </h4>

                    <div class="form-group">
                        <label asp-for="Client.JudetID" class="control-label"></label>
                        <select asp-for="Client.JudetID" class="form-control" asp-items="ViewBag.JudetID"></select>


                    </div>
                    <div class="form-group">
                        <label asp-for="Client.LocalitateID" class="control-label"></label>
                        <select asp-for="Client.LocalitateID" class="form-control" asp-items="ViewBag.LocalitateID"></select>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Strada" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.Strada"></label>
                        <span asp-validation-for="Input.Strada" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Numar" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.Numar"></label>
                        <span asp-validation-for="Input.Numar" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.CodPostal" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.CodPostal"></label>
                        <span asp-validation-for="Input.CodPostal" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Telefon" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.Telefon"></label>
                        <span asp-validation-for="Input.Telefon" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
        <button id="registerSubmit" type="submit" class="w-64 btn btn-lg btn-primary" style="background-color:black; float: right">Register</button>
    </div>
