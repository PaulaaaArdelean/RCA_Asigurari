                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/Vehicule/Index"><i class="bi bi-car-front-fill"></i> Vehicule</a>  </li>
                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/PersoaneFizice/Index"><i class="bi bi-people-fill"></i>Persoane fizice</a></li>
                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/PersoaneJuridice/Index"><i class="bi bi-people-fill"></i> Persoane juridice </a></li>
                                 
                            </li>

                        </ul>
                    </div>
                  
                    <div>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-pencil">Adauga</i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu">
                                   @* <li class="nav-item"> <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Inregistreaza client nou</a></li>*@
                                   @* <li>  <a class="nav-link text-dark" asp-area="" asp-page="/Clienti/Create"> Clienti</a>  </li>*@
                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/Clienti/Create"><i class="bi bi-people-fill"></i> Clienti</a>  </li>
                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/Vehicule/Create"><i class="bi bi-car-front-fill"></i> Vehicule</a>  </li>
                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/PersoaneFizice/Create"><i class="bi bi-people-fill"></i>Persoane fizice</a></li>
                                    <li>  <a class="nav-link text-dark" asp-area="" asp-page="/PersoaneJuridice/Create"><i class="bi bi-people-fill"></i> Persoane juridice </a></li>
                            </li>

                        </ul>
                    </div>

                    }}

                      @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("User"))
                            {
                    <div>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Oferte/Create"><i class="bi bi-pencil-square">Calculează-ți oferta!</i>  </a>
                            </li>
                        </ul>
                    </div>
                            }}
                   </div>
                    <partial name="_LoginPartial" />
                  </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

